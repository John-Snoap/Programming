<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <RelativeLayout
        android:id="@+id/relativeLayoutLL2P"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/relativeLayoutRT"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/RelativeLayoutLL3P"
        android:layout_margin="1dp"
        android:scrollbarStyle="insideOverlay"
        android:scrollbars="vertical"
        android:visibility="visible" >

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/textViewDestinationLL2P"
            android:text="@string/Source_LL2P_MAC"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/Blue_Fill" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="@string/Destination_LL2P_MAC"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/Blue_Fill" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/textViewSourceLL2P"
            android:text="@string/Type_Field"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/Blue_Fill" />

        <TextView
            android:id="@+id/textViewDestinationLL2P"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/textView1"
            android:text="@string/FFFFFF"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/Neutral_Fill" />

        <TextView
            android:id="@+id/textViewSourceLL2P"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textViewDestinationLL2P"
            android:layout_below="@+id/textViewDestinationLL2P"
            android:text="@string/FFFFFF"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/Neutral_Fill" />

        <TextView
            android:id="@+id/textViewTypeFieldLL2P"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView5"
            android:layout_alignBottom="@+id/textView5"
            android:layout_alignRight="@+id/textViewSourceLL2P"
            android:text="@string/FFFF"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/Neutral_Fill" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/textView5"
            android:text="@string/CRC16CCITT"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/Blue_Fill" />

        <TextView
            android:id="@+id/textViewCRC16CCITT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/textViewTypeFieldLL2P"
            android:layout_below="@+id/textViewTypeFieldLL2P"
            android:text="@string/FFFF"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/Neutral_Fill" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/textView7"
            android:layout_marginTop="15dp"
            android:text="@string/Payload"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/Blue_Fill" />

        <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/textView9" >

            <LinearLayout
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textViewPayloadLL2P"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="166dp"
                    android:text="@string/turnOnWifi"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/Neutral_Font" />

            </LinearLayout>
        </ScrollView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="1dp"
        android:layout_toRightOf="@id/relativeLayoutLL2P" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:text="@string/IPAddress"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/Red_Fill" />

        <EditText
            android:id="@+id/editTextIPaddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/editTextLL2PMAC"
            android:layout_toRightOf="@+id/textView2"
            android:ems="10"
            android:hint="@string/IP_Example"
            android:textColor="@color/Neutral_Fill" />

        <EditText
            android:id="@+id/editTextLL2PMAC"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/editTextIPaddress"
            android:layout_toRightOf="@+id/textView2"
            android:ems="10"
            android:hint="@string/FFFFFF"
            android:textColor="@color/Neutral_Fill" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/editTextIPaddress"
            android:layout_alignParentLeft="true"
            android:text="@string/LL2P_MAC"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/Blue_Fill" />

        <ListView
            android:id="@+id/listViewAdjacencyTable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/editTextEchoPayload"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/buttonAddAdjacency" >

        </ListView>

        <EditText
            android:id="@+id/editTextEchoPayload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/editTextLL2PMAC"
            android:layout_alignRight="@+id/listViewAdjacencyTable"
            android:layout_toRightOf="@+id/textView6"
            android:ems="10"
            android:hint="@string/Echo_Payload_Hint"
            android:text="@string/Echo_Payload_Hint"
            android:textColor="@color/Neutral_Font" >

            <requestFocus />
        </EditText>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/editTextLL2PMAC"
            android:layout_alignParentLeft="true"
            android:text="@string/Echo_Payload"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/Blue_Fill" />

        <Button
            android:id="@+id/buttonAddAdjacency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/editTextIPaddress"
            android:text="@string/Add"
            android:textColor="@color/Neutral_Font" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayoutRT"
        android:layout_width="wrap_content"
        android:layout_height="214dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/relativeLayout2" >

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="@string/Routing_Table" />

        <ListView
            android:id="@+id/listViewRoutingTable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView8"
            android:layout_centerHorizontal="true" >

        </ListView>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayoutFT"
        android:layout_width="wrap_content"
        android:layout_height="214dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/relativeLayout2" >

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="@string/Forwarding_Table" />

        <ListView
            android:id="@+id/listViewForwardingTable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView10"
            android:layout_centerHorizontal="true" >

        </ListView>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/RelativeLayoutLL3P"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/relativeLayoutRT"
        android:layout_margin="1dp"
        android:scrollbarStyle="insideOverlay"
        android:scrollbars="vertical"
        android:visibility="visible" >

        <TextView
            android:id="@+id/TextView03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/textViewSourceLL3P"
            android:text="@string/Destination_LL3P_IP"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/Red_Fill" />

        <TextView
            android:id="@+id/TextView02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="@string/Source_LL3P_IP"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/Red_Fill" />

        <TextView
            android:id="@+id/TextView04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/textViewDestinationLL3P"
            android:text="@string/Type_Field"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/Red_Fill" />
        
        <TextView
            android:id="@+id/TextView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/TextView06"
            android:text="@string/Checksum16Bit1sComplement"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/Red_Fill" />
        
        <TextView
            android:id="@+id/textViewChecksumResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/TextView12"
            android:layout_below="@+id/TextView12"
            android:text="@string/FFFF"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/Neutral_Fill" />
        
        <TextView
            android:id="@+id/TextView07"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/TextView06"
            android:layout_marginTop="40dp"
            android:text="@string/Payload"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/Red_Fill" />

        <ScrollView
            android:id="@+id/ScrollView01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignRight="@+id/textViewChecksumResult"
            android:layout_below="@+id/TextView07" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textViewPayloadLL3P"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="166dp"
                    android:text="@string/turnOnWifi"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/Neutral_Font" />

            </LinearLayout>
        </ScrollView>

        <TextView
            android:id="@+id/textViewTypeFieldLL3P"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/TextView03"
            android:layout_toRightOf="@+id/TextView04"
            android:text="@string/FFFF"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/Neutral_Fill" />

        <TextView
            android:id="@+id/textViewSourceLL3P"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/TextView02"
            android:text="@string/FFFF"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/Neutral_Fill" />

        <TextView
            android:id="@+id/textViewDestinationLL3P"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/TextView03"
            android:layout_alignBottom="@+id/TextView03"
            android:layout_alignLeft="@+id/textViewSourceLL3P"
            android:text="@string/FFFF"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/Neutral_Fill" />

        <TextView
            android:id="@+id/TextView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textViewDestinationLL3P"
            android:layout_alignParentRight="false"
            android:layout_alignRight="@id/textViewChecksumResult"
            android:text="@string/Time_To_Live"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/Red_Fill" />

        <TextView
            android:id="@+id/textViewTimeToLive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textViewDestinationLL3P"
            android:layout_alignBottom="@+id/textViewDestinationLL3P"
            android:layout_alignParentRight="false"
            android:layout_alignRight="@id/textViewChecksumResult"
            android:text="@string/FF"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/Neutral_Fill" />

        <TextView
            android:id="@+id/textViewIDLL3P"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/TextView12"
            android:layout_alignParentRight="false"
            android:layout_alignRight="@id/textViewChecksumResult"
            android:text="@string/FFFF"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/Neutral_Fill" />

        <TextView
            android:id="@+id/TextView06"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textViewTypeFieldLL3P"
            android:layout_alignBottom="@+id/textViewTypeFieldLL3P"
            android:layout_toLeftOf="@+id/textViewIDLL3P"
            android:text="@string/Identifier"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/Red_Fill" />

    </RelativeLayout>

</RelativeLayout>
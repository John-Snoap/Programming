package john.snoap.router.support;

import android.app.Activity;
import android.content.Context;

/**
 * class UIManager
 * @author john.snoap
 * 
 */
public class UIManager
{
	// private variables
	private Factory factory;
	private Activity parentActivity;
	private Context context;
	
	// getters and setters
	
	
	// constructor
	public UIManager(Factory myFactory)
	{
		UpdateObjectReferences(myFactory);
		// I am not sure if the below two steps are a necessary action every time we update
		// the object references, so for now I just have these two steps in the constructor
		// only.
		parentActivity = myFactory.GetParentActivityReference();
		context = myFactory.GetParentActivityReference().getBaseContext();
	} // end constructor
	
	// public methods
	public void UpdateObjectReferences(Factory myFactory)
	{
		factory = myFactory;
	} // end getter GetObjectReferences
} // end class UIManager
